# 🌐 Variables d'environnement Frontend - Docker Optimisé
# Configuration pour conteneur Docker

# 🔗 API Backend - URL publique (pour le navigateur)
NEXT_PUBLIC_API_URL=http://localhost:4002

# 🌐 Site URL publique
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# 🔗 API Backend - URL interne (pour SSR dans Docker)
INTERNAL_API_URL=http://backend:4002

# 🎨 Configuration de l'application
NEXT_PUBLIC_APP_NAME=LogoDouman
NEXT_PUBLIC_APP_VERSION=2.1.0
NEXT_PUBLIC_APP_DESCRIPTION="Plateforme e-commerce moderne"

# 🔧 Configuration Next.js
NEXT_TELEMETRY_DISABLED=1
NODE_ENV=production

# 🌍 Configuration serveur
PORT=3000
HOSTNAME=0.0.0.0

# 🔐 Configuration de sécurité (si nécessaire)
NEXT_PUBLIC_SECURE_MODE=true

# 📊 Configuration analytics (désactivé par défaut)
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# 🎨 Configuration thème
NEXT_PUBLIC_THEME_COLOR=#f97316
NEXT_PUBLIC_BRAND_COLOR=#ea580c

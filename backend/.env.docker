# Variables d'environnement pour le backend dans Docker
# Ce fichier est utilisé par le container backend

# Base de données PostgreSQL (nom du service Docker)
DATABASE_URL="postgresql://postgres:logodouman123@postgres:5432/logodouman"

# Configuration JWT
JWT_SECRET="logodouman-super-secret-jwt-key-docker-2024"

# Environnement
NODE_ENV=production

# Port du serveur
PORT=4002

# CORS - Origines autorisées (nom du service Docker + localhost)
CORS_ORIGIN=http://frontend:3000,http://localhost:3000

# Configuration Redis (nom du service Docker)
REDIS_URL="redis://redis:6379"
REDIS_PASSWORD="redis123"

# Configuration de stockage des fichiers
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=5242880

# Configuration de logging
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# Configuration de sécurité
BCRYPT_ROUNDS=12
SESSION_SECRET="logodouman-session-secret-docker"

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

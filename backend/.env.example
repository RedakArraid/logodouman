# Variables d'environnement pour le backend LogoDouman
# Copier ce fichier en .env pour l'utiliser

# Base de données PostgreSQL
DATABASE_URL="postgresql://postgres:logodouman123@localhost:55432/logodouman"

# Configuration JWT
JWT_SECRET="logodouman-super-secret-jwt-key-change-in-production-2024"

# Environnement
NODE_ENV=development

# Port du serveur
PORT=4002

# CORS - Origines autorisées
CORS_ORIGIN=http://localhost:3000

# Configuration Redis (pour le cache, sessions)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="redis123"

# Configuration email (quand implémenté)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Configuration de stockage des fichiers
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Configuration Stripe (quand implémenté)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Configuration de logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configuration de sécurité
BCRYPT_ROUNDS=12
SESSION_SECRET="logodouman-session-secret-change-in-production"

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ğŸŒ Dockerfile Frontend Next.js - Version CorrigÃ©e OptimisÃ©e
FROM node:18-alpine AS base

# ğŸ“¦ Installation des dÃ©pendances systÃ¨me
RUN apk add --no-cache libc6-compat wget curl

WORKDIR /app

# ğŸ“‹ Ã‰tape 1: Installation des dÃ©pendances
FROM base AS deps

# Copier les fichiers de configuration des dÃ©pendances
COPY package*.json ./

# Installation complÃ¨te (dev + prod) pour le build
RUN npm ci --include=dev && npm cache clean --force

# ğŸ—ï¸ Ã‰tape 2: Build de l'application
FROM base AS builder

WORKDIR /app

# Copier les dÃ©pendances installÃ©es
COPY --from=deps /app/node_modules ./node_modules

# Copier tout le code source
COPY . .

# Variables de build
ARG NODE_ENV=production
ARG NEXT_PUBLIC_API_URL=http://localhost:4002
ARG NEXT_PUBLIC_SITE_URL=http://localhost:3000

ENV NODE_ENV=${NODE_ENV}
ENV NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL}
ENV NEXT_PUBLIC_SITE_URL=${NEXT_PUBLIC_SITE_URL}
ENV NEXT_TELEMETRY_DISABLED=1

# ğŸ—ï¸ Build de l'application Next.js
RUN npm run build

# ğŸš€ Ã‰tape 3: Production - Image finale
FROM base AS runner

WORKDIR /app

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1
ENV PORT=3000
ENV HOSTNAME=0.0.0.0

# ğŸ‘¤ CrÃ©er un utilisateur non-root pour la sÃ©curitÃ©
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# ğŸ“ Copier les fichiers publics
COPY --from=builder /app/public ./public

# ğŸ“ CrÃ©er le dossier .next avec les bonnes permissions
RUN mkdir .next
RUN chown nextjs:nodejs .next

# ğŸ“¦ Copier les fichiers de production
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static

# ğŸ“„ Copier les fichiers de configuration si prÃ©sents
COPY --from=builder --chown=nextjs:nodejs /app/next.config.js* ./
COPY --from=builder --chown=nextjs:nodejs /app/package.json ./

# ğŸ‘¤ Utiliser l'utilisateur non-root
USER nextjs

# ğŸ” Health check optimisÃ©
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3000 || exit 1

# ğŸš€ Exposer le port
EXPOSE 3000

# ğŸ¯ Commande de dÃ©marrage
CMD ["node", "server.js"]
